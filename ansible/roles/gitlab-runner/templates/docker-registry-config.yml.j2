version: 0.1
log:
  fields:
    service: registry
  level: info
proxy:
  remoteurl: https://registry-1.docker.io
storage:
  cache:
    blobdescriptor: inmemory
  s3:
    accesskey: "{{ gitlab_runner_s3_access_key }}"
    secretkey: "{{ gitlab_runner_s3_secret_key }}"
    region: generic
    regionendpoint: "{{ gitlab_runner_s3_endpoint }}"
    bucket: hgi-docker-registry
    encrypt: false
    secure: false
    v4auth: false
    rootdirectory: ""
http:
  addr: :5000
  headers:
    X-Content-Type-Options: [nosniff]
  tls:
    certificate: "{{ gitlab_runner_docker_registry_cert_file }}"
    key: "{{ gitlab_runner_docker_registry_key_file }}"
health:
  storagedriver:
    enabled: true
    interval: 10s
    threshold: 3
