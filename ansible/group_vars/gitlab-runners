# file: group_vars/gitlab-runners

gitlab_runner_registrations: 
  - name: "docker-privileged"
    executor: docker
    extra_tags: 
      - docker
      - docker-privileged
    extra_args: "--docker-privileged --docker-image docker:latest"
  - name: "docker"
    executor: docker
    extra_tags: 
      - docker
    extra_args: "--docker-image docker:latest"
  - name: "shell-bash"
    executor: shell
    extra_tags: 
      - shell
      - bash
    extra_args: "--shell bash"
